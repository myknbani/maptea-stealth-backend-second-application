{
  "name": "maptea-assessment-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "db:sync": "pnpm orm:docker migration:up # && pnpm orm:docker seeder:run",
    "start": "pnpm db:sync && nest start",
    "start:dev": "pnpm db:sync && nest start --watch",
    "start:debug": "pnpm db:sync && nest start --debug --watch",
    "start:prod": "pnpm db:sync && node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky",
    "orm:docker": "pnpm exec mikro-orm",
    "orm:local": "env $(cat .env.local | xargs) pnpm exec mikro-orm",
    "qa:lint-staged": "lint-staged",
    "qa:typecheck": "tsc --noEmit",
    "qa:test": "pnpm test",
    "precommit": "FORCE_COLOR=1 pnpm run --aggregate-output --stream --parallel /^qa:/"
  },
  "dependencies": {
    "@apollo/server": "^5.3.0",
    "@mikro-orm/cli": "^6.6.6",
    "@mikro-orm/core": "^6.6.6",
    "@mikro-orm/entity-generator": "^6.6.6",
    "@mikro-orm/migrations": "^6.6.6",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.6.6",
    "@mikro-orm/reflection": "^6.6.6",
    "@mikro-orm/seeder": "^6.6.6",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/apollo": "^13.2.3",
    "@nestjs/common": "^11.1.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.13",
    "@nestjs/graphql": "^13.2.3",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.13",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "graphql": "^16.12.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sql-formatter": "^15.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@golevelup/ts-jest": "^1.2.1",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.13",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/mocks/orm-collection.ts"
    ]
  },
  "packageManager": "pnpm@10.28.2",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/orm/mikro-orm.config.ts",
      "./dist/orm/mikro-orm.config.js"
    ]
  }
}
